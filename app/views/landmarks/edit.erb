<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="PATCH">
<input type="text" id='name' value="<%=@landmark.name%>" name='landmark[name]'>
<input type="text" id='year_completed' value="<%=@landmark.year_completed%>" name='landmark[year_completed]'>
<input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
