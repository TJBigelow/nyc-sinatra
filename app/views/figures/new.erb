<form action="/figures" method="post">
    <p>Name <input id="figure_name" name="figure[name]" type="text"></p>
    
    <h3>Titles</h3>
    <% @titles.each do |t|%>
    <label><%= t.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= t.id %>" value="<%= t.id %>"><br>
    <% end %>
    <h3>Create New Title:</h3>
    <input type="text" id="new_title" name="title[name]">
    
    <h3>Landmarks</h3>
    <% @landmarks.each do |l|%>
    <label><%= l.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= l.id %>" value="<%= l.id %>"><br>
    <% end %>
    <h3>Create New Landmark:</h3>
    Name:
    <input type="text" id="new_landmark" name="landmark[name]">
    Year:
    <input type="text" name="landmark[year_completed]">
    <input type="submit" value="Create New Figure">
</form>